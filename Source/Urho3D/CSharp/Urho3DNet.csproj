<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup>
    <AssemblyName>Urho3DNet</AssemblyName>
    <OutputType>Library</OutputType>
  </PropertyGroup>
  <Target Name="GatherBuildFiles" BeforeTargets="CoreCompile">
    <ItemGroup>
      <BindingsSourceCode Include="$([System.IO.Directory]::GetFiles(&quot;$(BuildDir)Source/Urho3D/CSharp&quot;, &quot;*.cs&quot;))" />
      <Compile Include="@(BindingsSourceCode)" />
    </ItemGroup>
  </Target>
</Project>
